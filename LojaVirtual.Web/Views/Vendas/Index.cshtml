@model IEnumerable<LojaVirtual.Web.Models.Vendas>

@{
    ViewBag.Title = "Index";
}

<h2>Resumo de Vendas</h2>

<p>
    @Html.ActionLink("Adicionar", "Create","Vendas",null,new { @class = "btn btn-primary btn-lg" })
</p>
<div class="form-group mb-0">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover m-0">
            <thead class="thead-themed">
                <tr>
                    <th class="text-center">
                        Cód. Venda
                    </th>
                    <th class="text-center">
                        Data e hora da Venda
                    </th>
                    <th class="text-center">

                        @Html.DisplayNameFor(model => model.Cliente)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Total)
                    </th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Cliente)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                    <td class="text-center">
                        @*@Html.ActionLink("Editar", "Edit", "Vendas", new { id = item.ID }, new { @class = "btn btn-success btn-sm" })*@
                        @Html.ActionLink("Detalhes", "Details", "Vendas", new { id = item.ID }, new { @class = "btn btn-success btn-sm" })
                        @Html.ActionLink("Deletar", "Delete", "Vendas", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
