@model IEnumerable<LojaVirtual.Web.Models.Produtos>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Produtos</h2>

<p>
    @Html.ActionLink("Cadastrar", "Create", "Produto", null, new { @class = "btn btn-primary btn-lg" })
</p>
<div class="form-group mb-0">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover m-0">
            <thead class="thead-themed">
                <tr>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Quantidade)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Quantidade)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("Editar", "Edit", "Produto", new { id = item.ID }, new { @class = "btn btn-success btn-sm" })
                            @Html.ActionLink("Detalhes", "Details", "Produto", new { id = item.ID }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Deletar", "Delete", "Produto", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
